<div class="container my-5 text-center">
  <div class="row">
    <div class="col-12">
      <h1>Shop now</h1>
    </div>
  </div>
</div>

<hr>

<div class="container my-5 px-4">
  <div class="row">
    <div class="col-12">
      <h1>Search</h1>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-12">
      <a class="btn btn-primary mb-3" href="/listings/new">Add an item</a>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <form class="form-inline mb-3">
        <input class="form-control mr-sm-2" type="search" placeholder="Search by title" aria-label="Search" name="search">
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Search by title</button>
      </form>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-12">
      <form class="form-inline">
        <label class="mr-2">Price range:</label>
        <input type="number" class="form-control mr-2" placeholder="Min" name="min_price">
        <input type="number" class="form-control mr-2" placeholder="Max" name="max_price">
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Filter</button>
      </form>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Image</th>
            <th>Category</th>
            <th>Seller</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @matching_listings.each do |a_listing| %>
            <tr>
              <td><%= a_listing.title %></td>
              <td><%= number_to_currency(a_listing.price, unit: "$") %></td>
              <td><img src="<%= a_listing.image %>" class="img-thumbnail"></td>
              <td><%= Category.find(a_listing.category_id).name %></td>
              <td><%= a_listing.seller.name %></td>
              <td>
                <a href="/listings/<%= a_listing.id %>" class="btn btn-sm btn-primary">
                  Show details
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <hr>
</div>
