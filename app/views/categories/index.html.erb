<div class="container my-5">
  <div class="text-center">
    <h1 style="font-size: 3rem;">List of all categories</h1>
  </div>
</div>

<hr class="my-5">

<div class="container">
  <div class="text-center">
    <h2>
      <a href="categories/new" class="btn btn-primary" style="font-size: 1.5rem;">Add a new category</a>
    </h2>
  </div>
</div>

<hr class="my-5">

<div class="container">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th class="text-center" style="font-size: 1.5rem;">Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @list_of_categories.each do |a_category| %>
        <tr>
          <td class="text-center" style="font-size: 1.2rem;"><%= a_category.name %></td>
          <%#<td>
            <a href="/categories/<%= a_category.id %">
              Show details
            </a>
          </td%>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr class="my-5">
