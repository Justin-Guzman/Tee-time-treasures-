<div class="container mt-4">
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Text</th>
            <th>Listing</th>
            <th>From</th>
            <th></th>
            <th>Sent</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @list_of_messages.select { |message| message.sender == @current_user || message.recipient == @current_user }.each do |a_message| %>
          <tr>
            <td><%= a_message.body %></td>
            <td><%= a_message.listing.title %></td>
            <td><%= a_message.sender.name %></td>
            <td><%= a_message.recipient.name %></td>
            <td><%= time_ago_in_words(a_message.created_at) %> ago</td>
            <td><a href="/messages/<%= a_message.id %>" class="btn btn-primary">Show details</a></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
