<div class="container my-5 text-center">
  <div class="row">
    <div class="col-12">
      <h1>Shop now</h1>
    </div>
  </div>
</div>


  <hr>

  <div class="container my-5 px-4">
  <div class="row">
    <div class="col-12">
      <h1>Shop now</h1>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-12">
      <%= form_tag(listings_path, method: :get, class: "form-inline") do %>
        <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2", type: "search", placeholder: "Search by title" %>
        <%= button_tag type: :submit, class: "btn btn-outline-success my-2 my-sm-0" do %>
          Search
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Image</th>
            <th>Category</th>
            <th>Seller</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @list_of_listings.each do |a_listing| %>
            <tr>
              <td><%= a_listing.title %></td>
              <td><%= number_to_currency(a_listing.price, unit: "$") %></td>
              <td><img src="<%= a_listing.image %>" class="img-thumbnail"></td>
              <td><%= Category.find(a_listing.category_id).name %></td>
              <td><%= a_listing.seller.name %></td>
              <td>
                <a href="/listings/<%= a_listing.id %>" class="btn btn-sm btn-primary">
                  Show details
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <hr>
</div>

