<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Sign in</h1>
      <form action="/user_verify_credentials" method="post">
        <div class="form-group">
          <label for="email_box">Email</label>
          <input id="email_box" name="query_email" placeholder="Enter your email..." type="text" class="form-control">
        </div>

        <div class="form-group">
          <label for="password_box">Password</label>
          <input id="password_box" name="query_password" placeholder="Enter your password..." type="password" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary btn-block">
          Sign in
        </button>
      </form>

      <hr>

      <p class="text-center">
        Or, <a href="/user_sign_up">Sign up</a> instead.
      </p>
    </div>
  </div>
</div>

