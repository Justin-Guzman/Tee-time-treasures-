<div class="container">
  <h1>Conversations</h1>

  <% @conversations.each do |conversation| %>
    <div class="conversation">
      <h2><%= conversation[:listing].title %></h2>

      <% conversation[:users].each do |user| %>
        <p><%= user.name %></p>
      <% end %>

      <ul>
        <% conversation[:messages].each do |message| %>
          <li><%= message.body %></li>
        <% end %>
      </ul>

      <%# <%= #link_to "View conversation", conversation_path(listing_id: conversation[:listing].id, sender_id: conversation[:users][0].id, recipient_id: conversation[:users][1].id) %> %>
    </div>
  <% end %>
</div>
